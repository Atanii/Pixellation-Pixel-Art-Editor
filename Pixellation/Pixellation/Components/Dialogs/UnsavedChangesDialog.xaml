<Window x:Class="Pixellation.Components.Dialogs.UnsavedChangesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixellation.Components.Dialogs"
        mc:Ignorable="d" Height="120" Width="450">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontWeight="Medium">You have unsaved changes!</TextBlock>
        <UniformGrid Rows="1" Columns="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="btnSave" Content="Save" FontSize="18" Margin="5" Click="BtnSave_Click"></Button>
            <Button x:Name="btnDontSave" Content="Don't Save" FontSize="18" Margin="5" Click="BtnDontSave_Click"></Button>
            <Button x:Name="btnCancel" Content="Cancel" FontSize="18" Margin="5" IsDefault="True" Click="BtnCancel_Click"></Button>
        </UniformGrid>
    </StackPanel>
</Window>
