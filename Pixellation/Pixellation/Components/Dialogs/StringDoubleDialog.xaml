<Window x:Class="Pixellation.Components.Dialogs.StringDoubleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixellation.Components.Dialogs" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="{Binding title}" Height="150" Width="300" KeyDown="Window_KeyDown">
    <Grid>
        <Label x:Name="input1Label" Content="{Binding inputName1}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="114"/>
        <TextBox x:Name="txtString" HorizontalAlignment="Left" Margin="124,14,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="input2Label" Content="{Binding inputName2}" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="114"/>
        <TextBox x:Name="txtDouble" HorizontalAlignment="Left" Margin="124,45,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Click="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="205,74,0,0" VerticalAlignment="Top" IsCancel="True"/>
        <Button Click="Save" Content="Save" HorizontalAlignment="Left" Margin="124,74,0,0" VerticalAlignment="Top" IsDefault="True"/>
    </Grid>
</Window>
