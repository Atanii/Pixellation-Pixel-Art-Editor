<UserControl x:Class="Pixellation.Components.Panels.EditorSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixellation.Components.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="180">
    <StackPanel Orientation="Vertical">
        <CheckBox Margin="5" ToolTip="Toggle Tiled Mode" x:Name="cbTiledMode" Click="TiledModeToggle_Click">Tiled Mode</CheckBox>
        <StackPanel Orientation="Horizontal">
            <Slider Margin="5" Width="85" Height="15" ToolTip="Opacity of the tiles shown around the canvas."
                x:Name="tiledModeOpacitySlider" VerticalAlignment="Top"
                ValueChanged="TiledModeOpacitySlider_ValueChanged"
                Minimum="0" Maximum="100" TickFrequency="1"
                IsSnapToTickEnabled="True"/>
            <Label>Tile Opacity</Label>
        </StackPanel>
        <CheckBox Margin="5" ToolTip="Toggle Canvas Border" x:Name="cbEditorBorder" Click="cbEditorBorder_Click">Show Border</CheckBox>
        <CheckBox Margin="5" ToolTip="Toggle Canvas Grid" x:Name="cbEditorGrid" Click="cbEditorGrid_Click">Show Grid</CheckBox>
    </StackPanel>
</UserControl>
