<UserControl x:Class="Pixellation.Components.Panels.TiledModeSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixellation.Components.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="180">
    <WrapPanel>
        <CheckBox Width="30" Height="25" Click="TiledModeToggle_Click"></CheckBox>
        <!--<ToggleButton x:Name="tiledModeToggle" Click="TiledModeToggle_Click" Content="Tiled" VerticalAlignment="Stretch" Width="30" Height="25"></ToggleButton>-->
        <Slider x:Name="tiledModeOpacitySlider" ValueChanged="TiledModeOpacitySlider_ValueChanged" Value="50" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True" Width="150" Height="25"/>
    </WrapPanel>
</UserControl>
