<UserControl x:Class="Pixellation.Components.Panels.TiledModeSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixellation.Components.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="180">
    <StackPanel Orientation="Horizontal">
        <CheckBox Width="30" ToolTip="Toggle Tiled Mode" Height="25" Click="TiledModeToggle_Click" Margin="5"></CheckBox>
        <Slider x:Name="tiledModeOpacitySlider" VerticalAlignment="Top"
                ValueChanged="TiledModeOpacitySlider_ValueChanged"
                Minimum="0" Maximum="100" TickFrequency="1"
                IsSnapToTickEnabled="True"
                Width="130" Height="15" Margin="5"/>
    </StackPanel>
</UserControl>
