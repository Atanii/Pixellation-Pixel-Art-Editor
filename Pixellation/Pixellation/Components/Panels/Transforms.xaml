<UserControl x:Class="Pixellation.Components.Panels.Transforms"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixellation.Components.Panels"
             mc:Ignorable="d" x:Name="transformsWindow"
             d:DesignHeight="350" d:DesignWidth="200">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Settings">
            <CheckBox x:Name="cbAllLayers" ToolTip="Apply Transformation To All Layers" Content="All Layers" Margin="5"></CheckBox>
        </GroupBox>
        <GroupBox Header="Mirror">
            <StackPanel Orientation="Vertical">
                <Button x:Name="mVertical" Margin="5" Click="mVertical_Click">Horizontally</Button>
                <Button x:Name="mHorizontal" Margin="5" Click="mHorizontal_Click">Vertically</Button>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Rotate">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="cbCounterClockWise" Content="Counterclockwise" Margin="5"></CheckBox>
                <Button x:Name="r90" Margin="5" Click="r90_Click">90°</Button>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Resize Image">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label>Width: </Label>
                    <TextBox x:Name="txtWidth" Width="35" Margin="5" LostFocus="txtWidth_LostFocus" Text="{Binding ElementName=transformsWindow, Path=LayerWidth, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <Label>Height:</Label>
                    <TextBox x:Name="txtHeight" Width="35" Margin="5" LostFocus="txtHeight_LostFocus" Text="{Binding ElementName=transformsWindow, Path=LayerHeight, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </StackPanel>
                <CheckBox x:Name="cbResizeProportional" Content="Proportional" ToolTip="Apply same amount of changes to other size attribute." Margin="5"></CheckBox>
                <Button x:Name="btnResize" Content="Apply" Margin="5" Click="btnResize_Click" IsDefault="True"></Button>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
