<Window   x:Class="Pixellation.MainWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:l="clr-namespace:Pixellation.Components.Editor"
          xmlns:Panels="clr-namespace:Pixellation.Components.Panels"
          xmlns:l2="clr-namespace:Pixellation.Tools"
          xmlns:resource="clr-namespace:Pixellation.Properties"
          Title="{Binding ElementName=mainWindow, Path=Title, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
          Closing="MainWindow_Closing"
          mc:Ignorable="d" Name="mainWindow" Height="1080" Width="1920">

    <!-- MAINPANEL -->
    <DockPanel LastChildFill="True">
        <!-- MENUBAR -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="New" Click="OpenNewImageDialog" />
                <Button Content="Open" Click="Open" />
                <Button Content="Save Project" Click="SaveProject" />
            </ToolBar>
            <ToolBar>
                <Button Content="Export" Click="ExportAsImage" />
            </ToolBar>
            <ToolBar>
                <Button Content="About" Click="OpenAboutDialog" />
            </ToolBar>
        </ToolBarTray>
        
        <!-- STATUSBAR -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="statWidth" Text="{Binding ElementName=canvasImage, Path=PixelWidth, Mode=OneWay, StringFormat=' Width: {0}px'}" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="statHeight" Text="{Binding ElementName=canvasImage, Path=PixelHeight, Mode=OneWay, StringFormat=' Height: {0}px'}" />
            </StatusBarItem>
            <StatusBarItem>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Left" Text="Zoom: " />
                    <Slider x:Name="sliderZoom" Value="{Binding ElementName=canvasImage, Path=Magnification, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Minimum="1" Maximum="30" Width="150" IsSnapToTickEnabled="True" />
                    <TextBlock DockPanel.Dock="Right" Name="statZoom" Text="{Binding ElementName=sliderZoom, Path=Value, StringFormat=' {0}x'}" />
                </DockPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- LEFT PANEL -->
        <Border DockPanel.Dock="Left" HorizontalAlignment="Left" Width="220" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer>
                <StackPanel>
                    <Label Content="Tools"></Label>
                    <Panels:ToolPalette Height="200" x:Name="toolPalette" />

                    <Label Content="Layers"></Label>
                    <Panels:LayerPalette LayerManager="{Binding ElementName=canvasImage, Mode=OneTime}"></Panels:LayerPalette>

                    <Label Content="Transforms"></Label>
                    <Panels:Transforms 
                        LayerWidth="{Binding ElementName=canvasImage, Path=PixelWidth, Mode=OneWay}"
                        LayerHeight="{Binding ElementName=canvasImage, Path=PixelHeight, Mode=OneWay}"
                        LayerManager="{Binding ElementName=canvasImage, Mode=OneTime}">
                    </Panels:Transforms>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- RIGHT PANEL -->
        <Border DockPanel.Dock="Right" HorizontalAlignment="Right" Width="220" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer>
                <StackPanel>
                    <Label Content="Preview"></Label>
                    <StackPanel Orientation="Vertical">
                        <l:DrawingPreview Width="180" Height="180" Layers="{Binding ElementName=canvasImage, Path=Layers, Mode=OneWay}" VisualToPreview="{Binding ElementName=canvasImage, Mode=OneTime}"></l:DrawingPreview>
                        <CheckBox>Onion (PLACEHOLDER)</CheckBox>
                    </StackPanel>

                    <Label Content="Tiled"></Label>
                    <Panels:EditorSettingsPanel x:Name="editorSettings"/>

                    <Label Content="Colour"></Label>
                    <l2:ColourChooser Width="200" Height="400" x:Name="colorChooser"
                                      PrimaryColor="{Binding ElementName=canvasImage, Path=PrimaryColor, Mode=TwoWay}"
                                      SecondaryColor="{Binding ElementName=canvasImage, Path=SecondaryColor, Mode=TwoWay}">
                    </l2:ColourChooser>

                    <Label Content="Animation Tester (PLACEHOLDER)"></Label>
                    <StackPanel Orientation="Vertical">
                        <l:DrawingPreview Width="180" Height="180" Layers="{Binding ElementName=canvasImage, Path=Layers, Mode=OneWay}" VisualToPreview="{Binding ElementName=canvasImage, Mode=OneTime}"></l:DrawingPreview>
                        <StackPanel Orientation="Horizontal">
                            <Button Margin="5">Play</Button>
                            <Button Margin="5">Loop</Button>
                            <Button Margin="5">Stop</Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- DRAWING AREA -->
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="200px"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" x:Name="canvasScroll">
                <ScrollViewer.Background>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,32,32" ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0Z" Brush="LightGray"/>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </ScrollViewer.Background>

                <l:PixelEditor ChosenTool="{Binding ElementName=toolPalette, Path=ChosenTool, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                           EraserModeOn="{Binding ElementName=toolPalette, Path=EraserModeOn, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                           TiledModeOn="{Binding ElementName=editorSettings, Path=TiledModeOn, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                           TiledOpacity="{Binding ElementName=editorSettings, Path=TiledOpacity, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                           ShowBorder="{Binding ElementName=editorSettings, Path=ShowBorderOn, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                           ShowGrid="{Binding ElementName=editorSettings, Path=ShowGridOn, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                           MirrorModeState="{Binding ElementName=toolPalette, Path=MirrorModeState, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="canvasImage" />
            </ScrollViewer>
            
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible" VerticalAlignment="Stretch">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Label Margin="5">Frames (PLACEHOLDER)</Label>
                        <Button Margin="5">Add Frame</Button>
                        <Button Margin="5">DuplicateFrame</Button>
                        <Button Margin="5">Merge Frame</Button>
                        <Button Margin="5">Delete Frame</Button>
                        <Button Margin="5">Move Left Frame</Button>
                        <Button Margin="5">Move Right Frame</Button>
                    </StackPanel>
                    <UniformGrid Rows="1" HorizontalAlignment="Left">
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                        <Canvas Width="100" Height="100" Margin="12">
                            <Canvas.Background>
                                <SolidColorBrush Color="DarkSlateGray"></SolidColorBrush>
                            </Canvas.Background>
                        </Canvas>
                    </UniformGrid>
                </StackPanel>
            </ScrollViewer>
            
        </Grid>
    </DockPanel>
    
</Window>
