<Window x:Class="Pixellation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixellation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" Click="SaveCanvasAsPng" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Border  Grid.Column="0" Grid.Row="0" Width="200" MaxWidth="200" Background="GhostWhite" BorderBrush="Black" BorderThickness="1">
            </Border>
            <Border Grid.Column="1" Grid.Row="0" Background="GhostWhite" BorderBrush="Black" BorderThickness="1">
                <Canvas Width="400" Name="paintSurface" MouseDown="Canvas_MouseDown_1" MouseMove="Canvas_MouseMove_1" RenderTransformOrigin="0.5,0.5">
                    <Canvas.Background>
                        <DrawingBrush TileMode="Tile" Viewport="0,0,5,5" 
                                     ViewportUnits="Absolute">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing>
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,0.1,0.1"/>
                                    </GeometryDrawing.Geometry>
                                    <GeometryDrawing.Pen>
                                        <Pen Brush="Black" Thickness="0.001"/>
                                    </GeometryDrawing.Pen>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Canvas.Background>
                </Canvas>
            </Border>
            <Border  Grid.Column="2" Grid.Row="0" Width="200" MaxWidth="200" Background="GhostWhite" BorderBrush="Black" BorderThickness="1">
            </Border>
        </Grid>
    </DockPanel>
    
</Window>
